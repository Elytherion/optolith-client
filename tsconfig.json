{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "NodeNext",
    "noEmit": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "app/",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src/",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
  },
  "include": [
    "src/**/*",
    "src/*",
    "app/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
